function webterm()
{
clear
echo -e "Where do you wish to go?"
select webchoice in internet IRC
do
	case "$webchoice" in
		"internet")
			clear
			echo "What program do you want to access the internet with?"
				select internetchoice in "Chromium Web Browser" "Firefox" "Elinks" "Links2"
				do
					case "$internetchoice" in
						"Chromium Web Browser")
							chromium-browser
						return
						;;
						"Firefox")
							firefox
						return
						;;
						"Elinks")
							elinks
						return
						;;
						"Links2")
							links2
						return
						;;
					esac
				done
				return
			;;
		"IRC")
			clear
				echo "What program should I use to access the IRC?"
				select ircchoice in "Finch" "Konversation"
					do
						case "$ircchoice" in
							"Finch")
								finch
							return
							;;
							"Konversation")
								konversation
							return
							;;
						esac
					done
					return
				;;
	esac
done
}
